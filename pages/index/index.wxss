/**index.wxss**/

page {
    width: 100%;
    height: 100%;
    position: fixed;
    left: 0;
    top: 0;
    background: url('https://s2.ax1x.com/2019/04/11/A7lTxO.png') no-repeat;
    background-size: 100% 100%;
}

.page {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
}

.img1 {
    width: 101rpx;
    height: 79rpx;
    position: absolute;
    bottom: -24rpx;
    left: 28%;
    z-index: 100;
}

.img2 {
    width: 101rpx;
    height: 79rpx;
    position: absolute;
    bottom: -24rpx;
    right: 15%;
    transform: rotateY(180deg);
    z-index: 100;
}

.v1 {
    width: 20%;
    height: 100%;
    display: flex;
    justify-content: flex-start;
    align-items: flex-end;
    flex-direction: column;
}

.left_v {
    width: 75%;
    height: 88rpx;
    border-radius: 52rpx;
    border-top-right-radius: 0;
    border-bottom-right-radius: 0;
    background: #ffeaeb;
    margin-bottom: 12rpx;
}

.left_v image {
    width: 90rpx;
    height: 90rpx;
}

.v2 {
    width: 70%;
    margin-right: 8%;
    height: 84%;
    background: #ffeaeb;
    border-radius: 38rpx;
    border-top-left-radius: 0;
    padding: 26rpx 40rpx;
}

.right_v {
    width: 200rpx;
    height: 200rpx;
    background: #fff;
    border: 2px solid #f29492;
    box-shadow: 0px 0px 6px #fafa5f;
    border-radius: 20rpx;
    display: inline-block;
    margin: 10rpx 14rpx;
    position: relative;
}

.right_v_img {
    position: absolute;
    left: 5rpx;
    top: 5rpx;
    width: 190rpx;
    height: 190rpx;
    z-index: 80;
}

.right_v_mask {
    position: absolute;
    left: 0;
    top: 0;
    width: 202rpx;
    height: 202rpx;
    z-index: 90;
    background: rgba(0, 0, 0, 0.6);
    border-radius: 16rpx;
}

.lockimg {
    width: 43rpx;
    height: 52rpx;
    position: absolute;
    right: 10rpx;
    bottom: 10rpx;
    z-index: 100;
}

.lockimg2 {
    width: 50rpx;
    height: 60rpx;
    position: absolute;
    right: 23rpx;
    bottom: 21rpx;
    z-index: 100;
}

.lockimg3 {
    width: 79rpx;
    height: 68rpx;
    position: absolute;
    right: 10rpx;
    bottom: 20rpx;
    z-index: 100;
}

.mask_view button {
    position: absolute;
    left: 11%;
    bottom: -116rpx;
    width: 276rpx;
    height: 99rpx;
    background: url('https://s2.ax1x.com/2019/04/11/A71JF1.png') no-repeat;
    background-size: 100% 100%;
    animation: btn 2.5s linear infinite;
}

@keyframes btn {
    0% {
        transform: scale(1);
    }

    25% {
        transform: scale(1);
    }

    35% {
        transform: scale(1.1);
    }

    50% {
        transform: scale(1);
    }

    65% {
        transform: scale(1.1);
    }

    80% {
        transform: scale(1);
    }

    100% {
        transform: scale(1);
    }
}

.view_share {
    width: 90%;
    height: 92%;
    border-radius: 56rpx;
    background: #fff;
    position: relative;
}

.imgContent {
    width: 100%;
    /* height: 80%; */
    border-radius: 70rpx;
}

.imgContent2 {
    width: 100%;
    height: 100%;
    border-radius: 56rpx;
    background: rgba(0, 0, 0, 0.4);
    position: absolute;
    left: 0;
    top: 0;
}

.close {
    width: 66rpx;
    height: 66rpx;
    position: absolute;
    right: -30rpx;
    top: -26rpx;
    z-index: 100;
}

.light {
    width: 678rpx;
    height: 681rpx;
    animation: light 3s linear infinite;
    position: absolute;
    left: 5%;
    top: 26%;
}

@keyframes light {
    0% {
        transform: rotate(0deg);
    }

    100% {
        transform: rotate(360deg);
    }
}
